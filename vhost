server {
    
    root /var/www/cronograma-personalizado;
    index index.html index.htm;

    server_name cronograma-personalizado.cultivardigital.com.br;

    location / {
        try_files $uri $uri/ /index.html;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/cronograma-personalizado.cultivardigital.com.br/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/cronograma-personalizado.cultivardigital.com.br/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = cronograma-personalizado.cultivardigital.com.br) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen   80;

    server_name cronograma-personalizado.cultivardigital.com.br;
    return 404; # managed by Certbot

}